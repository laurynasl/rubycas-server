<%
  if @service
    @signup_url = '/auth/users/new?service=' + @service
  else
    @signup_url = '/auth/users/new'
  end
%>
<!DOCTYPE html>
<html>
  <head>
    <title>Exvo ID - Login</title>    
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link type="text/css" href="http://staging.themes.exvo.com/stylesheets/themes/carbon/all.css?04050533586" charset="utf-8" rel="Stylesheet" media="all" />
    <link type="text/css" href="http://staging.themes.exvo.com/stylesheets/themes/carbon/layout.css?04050533586" charset="utf-8" rel="Stylesheet" media="all" />
    <link type="text/css" href="/stylesheets/all.css?040505335897" charset="utf-8" rel="Stylesheet" media="all" />
    <script type="text/javascript" charset="utf-8" src="/javascripts/jquery.js?040505335840"></script>

    <script type="text/javascript" charset="utf-8" src="/javascripts/jquery-ui.js?040505335874"></script>
    <script type="text/javascript" charset="utf-8" src="/javascripts/jquery.dataset.js?040505335893"></script>
    <script type="text/javascript" charset="utf-8" src="/javascripts/scrollable.js?040505335841"></script>
    <script type="text/javascript" charset="utf-8" src="http://exvo-themes-staging.heroku.com/javascripts/jquery.uniform.js?040505335839"></script>
    <script type="text/javascript" charset="utf-8" src="http://exvo-themes-staging.heroku.com/javascripts/layout.js?040505335872"></script>
    <script type="text/javascript" charset="utf-8" src="/javascripts/application.js?040505335893"></script>

    <script type="text/javascript" charset="utf-8" src="/javascripts/events.js?040505335836"></script>
  </head>
  <body>
    <div class="layout">
      <div id="hd">
        <div class='dock bar'> 
  <div class='cell fifth'> 
    <div class='shortcuts left'> 
      <div class='shortcut desktop' data-href="http://desktop.exvo.com">
        <div class='icon small'> 
          <div class='image'></div> 
        </div> 
        <h3>desktop</h3> 
      </div> 
    </div> 
  </div> 
  <div class='cell two-fifths' id='dock'> 
  </div> 
  <div class='cell two-fifths right'>
    <% if @logged_in %>
    <div class='shortcuts right'>
      <div class='shortcut account' data-href='https://auth.exvo.com:4430/auth/account/basics'>
        <div class='icon small'>
          <div class='image'></div>
        </div>
        <h3>account</h3>
      </div>
      <div class='shortcut refresh' data-href='#'>
        <div class='icon small'>
          <div class='image'></div>
        </div>
        <h3>refresh</h3>
      </div>
      <div class='shortcut help' data-href='/help'>
        <div class='icon small'>
          <div class='image'></div>
        </div>
        <h3>help</h3>
      </div>
      <div class='shortcut logout' data-href='/logout'>
        <div class='icon small'>
          <div class='image'></div>
        </div>
        <h3>logout</h3>
      </div>
    </div>
    <% else %>
      <a class='button carbon' href='/login'>Login</a>
      or
      <a class='button carbon' href='<%= @signup_url %>'>Signup</a>
    <% end %>    
  </div> 
</div>

        <div class="tool bar">
  <div class="cell half">
    <h2>Authorize</h2>
  </div>

  <div class="cell half">
  </div>
</div>

      </div>
      <div id="bd">
        <div class="title">
  <h1>Sign in to Continue</h1>
</div>
<div class="login <%= @message ? 'is-msg' : '' %>">

  <div class="login-form">
    <form id="login-form" action="<%= @form_action || "/login" %>" method="post">
    <input type="hidden" value="<%= @lt %>" class="hidden" name="lt" id="nil_class_lt"/>
    <input type="hidden" value="<%= @service %>" class="hidden" name="service" id="nil_class_service"/>
    <h3>Enter your Exvo ID and Password</h3>
    <input type="text" value="" class="text" name="username" id="nil_class_username"/>
    <input type="password" value="" class="password" name="password" id="nil_class_password"/>
    <input type="checkbox" class="checkbox" name="rem-me" id="rem-me_id"/><label for="rem-me_id">Remember Me</label>

    <input type="submit" value="Sign In" class="button" name="form_submit" id="form_submit"/>
    <div class="links">
      <a href="/auth/lost_password">Forgot password?</a>
      <a href="/auth/users/new" title="Not implemented">Sign in with Open ID</a>
    </div>
    </form>
  </div>
  <div>
    <% if @message %>
      <p class="messagebox <%= @message[:type] %>"><%= @message[:message] %></p>
      <a href="/logout" class="action button">Log Out</a>
      <a href="<%= @signup_url %>" class="button">Create Account</a>
    <% else %>
      <h2>Welcome</h2>
      <p>Don't have an Exvo ID yet?</p><p> Create one now. It's easy and free</p>
      <a href="" class="button">Read More</a>
      <a href="<%= @signup_url %>" class="action button">Create Account</a>
    <% end %>
 </div>
</div>

      </div>
      <!--div class="bottom bar"></div-->
    </div>

